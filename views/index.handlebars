<h1>Eat Da Burger!</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col s6 m6 l6">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div>
                            <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
                                <button type="submit" class="burgerReadyToEat">{{this.burger_name}}</button>
                            </form>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>

            <div class="col s6 m6 l6">
                {{#each burgers}}
                    {{#if this.devoured}}
                        <div class="burgerDevoured">
                            <div>
                                {{this.burger_name}}
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</main>

<h2>Add a Burger!</h2>

<div class="row">
    <div class="col s6 m6 l6">
        <form action="/burgers/new" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Enter a Burger Name">
            <button type="submit" class="addBurger">Add your Burger!</button>
        </form>
    </div>
</div>